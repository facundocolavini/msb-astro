{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    /* alias */
    "baseUrl": ".",
    "paths": {
      "@/*" : [ "./src/*" ],
    }
  },
  "include": [
    "./src/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.astro",
    "./src/**/*.tsx",
  ]

}